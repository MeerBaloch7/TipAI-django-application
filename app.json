{
  "name": "TipAI Django Predictor",
  "description": "A Django web application for predicting restaurant tips using machine learning",
  "image": "heroku/python",
  "repository": "https://github.com/MeerBaloch7/TipAI-django-application",
  "keywords": ["python", "django", "machine-learning", "xgboost", "tip-prediction"],
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ],
  "env": {
    "SECRET_KEY": {
      "description": "A secret key for a particular Django installation",
      "generator": "secret"
    },
    "DJANGO_SETTINGS_MODULE": {
      "value": "tip_predictor.heroku_settings"
    },
    "WEB_CONCURRENCY": {
      "value": "3"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
